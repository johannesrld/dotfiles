# vim: ft=sh
# General QOL aliases
alias c=clear
alias e='$EDITOR'
alias md="mkdir -pv"
alias ll="exa -a --long --no-user --no-time --no-filesize -@ --group-directories-first"

# WSL is a naughty boy when it comes to keeping time, so I have to run this periodically
alias tsync="sudo ntpdate time.windows.com"

# Git aliases
alias gs="git status"
alias gc="git commit"
alias gaa="git add ."
alias gp="git push"
alias gaac="git add . && git commit"
alias gll="exa --header --long --no-user --no-time --no-filesize --git --git-ignore -@ --group-directories-first"
